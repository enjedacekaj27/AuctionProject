@page
@model AuctionProject.Pages.CreateAuctionModel
@{
    var userData = (Entities.Models.User)ViewData["userData"];
}


<div class="container-fluid">

   
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">New Auction</h6>

        </div>
        <div class="card-body">
            <form method="post" class="user">
                @Html.ValidationSummary()
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input name="ProductName" type="text" class="form-control form-control-user" 
                               placeholder="Product name">
                    </div>
                    <div class="col-sm-6">
                        <input name="StartingBid" type="number" class="form-control form-control-user"
                               placeholder="Starting bid">
                    </div>
                </div>
                <div class="form-group">
                    <textarea type="text" name="description" class="form-control form-control-user" 
                           placeholder="Description"></textarea>
                </div>
                <div class="form-group">

                    <input type="datetime-local" name="enddate" class="form-control form-control-user"
                            placeholder="End Date">


                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                   Create Auction
                </button>

            </form>
        </div>
    </div>

</div>